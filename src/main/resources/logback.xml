<configuration>
    <property resource="logging.properties" />
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${logging.path}/scrabble-api.log</file>
        <encoder>
            <pattern>%d{dd/MM/yy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate.tool.schema.internal" level="DEBUG" />
    <logger name="org.hibernate.SQL" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>